<form class="box" action="/station/{{station._id}}/addreport" method="POST">
  <label>Complete Report:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" placeholder="Enter Code" name="code" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Temperature" name="temp" />
      </div>
      <div class="field">
        <input class="input" type="text" placeholder="Enter Pressure" name="pressure" />
        <input class="input" type="text" placeholder="00.00km/h" name="wind_speed" />
        <input class="input" type="text" placeholder="000deg" name="wind_direction" />
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Report</button>
</form>
